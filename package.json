  "type": "module",
  "main": "app.js",
  "scripts": {
    "start": "node -r dotenv/config index.js",
    "dev": "npm run local",
    "local": "cross-env NODE_ENV=local nodemon -r dotenv/config index.js",
    "lint": "eslint {src,test,config}/**/*.js",
    "lint-fix": "eslint --fix {src,test,config}/**/*.js",
    "unit": "mocha --config test/config/.mocharc.unit.json --reporter mocha-multi-reporters --reporter-options configFile=test/config/reporter.unit.config.json --exit",
